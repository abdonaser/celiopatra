        <field name="code">appointment.sequence</field>
        <field name="prefix">APP</field>
        <field name="padding">3</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Medicine Sequence -->
    <record id="medicine_sequence" model="ir.sequence">
